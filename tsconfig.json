{
  "compilerOptions": {
    "outDir": "build/ts",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@lib": ["node_modules/create-cle-plugin/ts/index"],
      "@src/*": ["src/*"],
      "@build/*": ["build/*"]
    }
  },
  "include": [
    "node_modules/create-cle-plugin/ts/*",
    "src/*"
  ]
}